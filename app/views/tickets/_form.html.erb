<%= form_with model: @ticket, local: true do |form| %>

  <div class="field">
    <%= form.label :event %>
    <%= form.collection_select :event_id, Event.all, :id, :title %>
  </div>

  <div class="field">
    <%= form.label :user %>
    <%= form.collection_select :user_id, User.all, :id, :name %>
  </div>

  <div class="field">
    <%= form.label :ticket_type %>
    <%= form.select :ticket_type, ['VIP', 'General', 'Early Bird'] %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.number_field :price, step: 0.01 %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
