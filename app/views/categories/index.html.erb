<h1>Categories</h1>
<%= link_to 'New Category', new_category_path %>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Events Count</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= link_to category.name, category_path(category) %></td>
        <td><%= category.events.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>
